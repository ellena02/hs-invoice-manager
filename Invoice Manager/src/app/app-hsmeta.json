{
  "uid": "InvoiceManager_app",
  "type": "app",

  "config": {
    "name": "Invoice Manager",
    "description": "Invoice Manager is a CRM UI extension that allows users to mark invoices, deals, and companies as bad debt directly from the Company record.",
    "distribution": "private",

    "auth": {
      "type": "oauth",
      "redirectUrls": [
        "https://hs-invoice-manager.onrender.com/auth/hubspot/callback"
      ],
      "requiredScopes": [
        "oauth",
        "crm.objects.companies.read",
        "crm.objects.companies.write",
        "crm.objects.deals.read",
        "crm.objects.deals.write",
        "crm.objects.invoices.read",
        "crm.objects.invoices.write"
      ],
      "optionalScopes": [],
      "conditionallyRequiredScopes": []
    },

    "permittedUrls": {
      "fetch": [
        "https://api.hubapi.com",
        "https://hs-invoice-manager.onrender.com"
      ],
      "iframe": [
        "https://hs-invoice-manager.onrender.com"
      ],
      "img": []
    },

    "support": {
      "supportEmail": "support@example.com",
      "documentationUrl": "https://example.com/docs",
      "supportUrl": "https://example.com/support",
      "supportPhone": "+18005555555"
    }
  },

  "extensions": [
    {
      "file": "extensions/company-tab.json"
    }
  ]
}
